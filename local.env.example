# see documentation in config.py

TOM_HOST="0.0.0.0"
tom_port="8000" # this still works
TOM_LOG_LEVEL="info"

#TOM_PROJECT_ROOT default is ./services/controller/src/tom_controller
TOM_PROJECT_ROOT="../../../.."
# paths will be joined w/ project_root except paths used to find .env or CONFIG_FILE
TOM_CONFIG_FILE="../../../../tom_controller_config.yaml" # this can't use project_root

# redis
TOM_REDIS_HOST="localhost"  # would be 'redis' when running in docker compose, etc
TOM_REDIS_PORT="6380"  # 6379 for unencrypted, 6380 for encrypted
#TOM_REDIS_PASSWORD="foo"  # password by itself is redis legacy auth
#TOM_REDIS_USERNAME="bar"  # username too for more modern auth
TOM_REDIS_USE_TLS="true"  # true, false
TOM_REDIS_TLS_CHECK_HOSTNAME="true"  # true, false
TOM_REDIS_TLS_CERT_REQS="none"  # none, optional, required
TOM_REDIS_TLS_CA_CERTS=""  #  /path/to/ca.crt - doesn't use project_root
TOM_REDIS_TLS_CERTFILE=""  #  /path/to/client.crt - doesn't use project_root
TOM_REDIS_TLS_KEYFILE=""  # /path/to/client.key - doesn't use project_root

TOM_ALLOW_INLINE_CREDENTIALS="true"  # good to keep this False when there are better options
TOM_AUTH_MODE="api_key"
TOM_API_KEY_HEADERS="X-API-Key,api-key"  # can also accept json encoded list of strings eg '["X-API-KEY", "api-key", ...]'
TOM_API_KEYS='["abc123:admin", "asldfjaldkf:admin"]'
TOM_OAUTH_TEST_ENABLED="false"  # Enable OAuth test endpoints (should be false in production)

TOM_INVENTORY_TYPE="yaml"  # or "swis"
TOM_INVENTORY_FILE="inventory/inventory.yml"

# SWIS / SWAPI
TOM_SWAPI_HOST='solarwinds.example.com'
TOM_SWAPI_PORT='17774'
TOM_SWAPI_USERNAME='swapi_user'
TOM_SWAPI_PASSWORD='swapi_password'
TOM_SWAPI_DEFAULT_CRED_NAME='autoUser'

# WORKER SETTINGS

TOM_WORKER_LOG_LEVEL="info"

TOM_WORKER_PROJECT_ROOT="../../.."

# redis
TOM_WORKER_REDIS_HOST="localhost"  # would be 'redis' when running in docker compose, etc
TOM_WORKER_REDIS_PORT="6380"  # 6379 for unencrypted, 6380 for encrypted
#TOM_WORKER_REDIS_PASSWORD="foo"  # password by itself is redis legacy auth
#TOM_WORKER_REDIS_USERNAME="bar"  # username too for more modern auth
TOM_WORKER_REDIS_USE_TLS="true"  # true, false
TOM_WORKER_REDIS_TLS_CHECK_HOSTNAME="true"  # true, false
TOM_WORKER_REDIS_TLS_CERT_REQS="none"  # none, optional, required
TOM_WORKER_REDIS_TLS_CA_CERTS=""  #  /path/to/ca.crt - doesn't use project_root
TOM_WORKER_REDIS_TLS_CERTFILE=""  #  /path/to/client.crt - doesn't use project_root
TOM_WORKER_REDIS_TLS_KEYFILE=""  # /path/to/client.key - doesn't use project_root

# credential settings
TOM_WORKER_CREDENTIAL_STORE="yaml"   # or "vault"
# credential_file uses project_root
TOM_WORKER_CREDENTIAL_FILE="inventory/assets.yml"  # yaml type credential store

# settings for hashicorp vault integration
TOM_WORKER_VAULT_URL="http://localhost:8200"  # vault type credential store
TOM_WORKER_VAULT_VERIFY_SSL="false"  # SSL verification disabled by default, set to "true" to enable

# Dev mode: use a static token (insecure, local development only)
TOM_WORKER_VAULT_TOKEN="myroot"  # using 'myroot' is crazy insecure, don't do in prod!

# Production mode: use AppRole authentication (if role_id and secret_id are set, token is ignored)
#TOM_WORKER_VAULT_ROLE_ID=""  # AppRole role_id - typically from AWS Secrets Manager
#TOM_WORKER_VAULT_SECRET_ID=""  # AppRole secret_id - typically from AWS Secrets Manager
